<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#4c4844"
    tools:context=".Main2Activity">



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Registro de Tareas por Lista"
        android:gravity="center"
        android:textColor="#59F1FF"
        android:textSize="25dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Descripcion"
        android:id="@+id/descTarea2"
        android:layout_marginTop="10dp"
        android:textAlignment="center"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Fecha realizado"
        android:id="@+id/fecharealizado2"
        android:layout_marginTop="10dp"
        android:inputType="date"
        android:textAlignment="center"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ID Lista"
        android:id="@+id/idlista2"
        android:layout_marginTop="10dp"
        android:inputType="number"
        android:textAlignment="center"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="seleccione el ID de la siguiente lista"
        android:textSize="15dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:id="@+id/mostrarListasEnTareas2"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/listaTarea2"
        android:textColor="#59F1FF"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:layout_marginRight="5dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/mostrarListasTareas2"
            android:textColor="#59F1FF"
            android:textSize="16dp"
            />
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:gravity="center">
        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/menuLW2"
            android:entries="@array/menu2"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/mostrarTodasTareas2"
            android:textColor="#59F1FF"
            android:textSize="18dp"
            />
    </ScrollView>



</LinearLayout>